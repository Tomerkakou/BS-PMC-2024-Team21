pipeline {
    agent any

    stages {
        stage('Install Flask Dependencies') {
            steps {
                script {
                    dir('be') {
                        sh 'pip install -r requirements.txt'
                    }
                }
            }
        }

        stage('Build and Install React App') {
            steps {
                dir('fe') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Start Flask and React') {
            steps {
                parallel(
                    // Start Flask app
                    {
                        script {
                            dir('be') {
                                sh 'flask run &'
                            }
                        }
                    },
                    // Start React app
                    {
                        script {
                            dir('fe') {
                                sh 'npm start &'
                            }
                        }
                    }
                )
            }
        }

        stage('Test apps') {
            steps {
                script {
                    // Test Flask app
                    sh 'curl -f http://localhost:5000'

                    // Test React app
                    sh 'curl -f http://localhost:3000'
                }
            }
        }
    }

    post {
        always {
            // Clean up after the pipeline
            deleteDir()
        }
    }
}
